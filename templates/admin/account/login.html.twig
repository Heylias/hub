<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Hubfiction Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" integrity="sha256-46qynGAkLSFpVbEBog43gvNhfrOj+BmwXdxFgVK/Kvc=" crossorigin="anonymous" />
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <script src="{{ asset('build/app.js') }}"></script>
</head>
<body>
    <div class="login-admin col-md-12 col-lg-4 offset-lg-4 mt-5">
        <div class="card bg-light mt-5">
            <div class="card-header">
                <h4 class="card-title">
                    <i class="fas fa-lock"></i> Admin log in
                </h4>
            </div>
            <div class="card-body">
                {% if hasError %}
                    <div class="alert alert-warning">
                        <p>Login or password is wrong</p>
                    </div>
                {% endif %}

                <form method="POST">
                    <div class="form-group">
                        <label for="username">Email</label><input type="text" class="form-control" placeholder="Email address" name="_username" id="username">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label><input type="password" class="form-control" placeholder="Password" name="_password" id="password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-lock-open"></i> Log in</button>
                        <a href="{{ path('homepage') }}" class="btn-btn-link">
                            <i class="fas fa-arrow-circle-left"></i> Back to website
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>