{% extends 'admin/base.html.twig' %}

{% block title %}Genres{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Genres Management</h1>
        <a href="{{ path('admin_genre_create') }}" class="btn btn-primary">Create a new genre</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th class="text-center">Fanfictions</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for genre in pagination.data %}
                    <tr>
                        <td>{{ genre.id }}</td>
                        <td>{{ genre.name }}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ genre.fanfictions | length }}</span>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('admin_genre_edit', {'id':genre.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_genre_delete', {'id':genre.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}