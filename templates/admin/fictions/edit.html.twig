{% extends 'admin/base.html.twig' %}

{% block title %}Editing fanfiction: {{ fiction.title }}{% endblock %}

{% form_theme myForm _self %}

{% block body %}
    <div class="container">
    
        {{form_start(myForm)}}

            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="{{ path('admin_fictions_index') }}" class="btn btn-secondary">Back</a>

        {{form_end(myForm)}}
    
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/image.js') }}"></script>
    <script src="{{ asset('build/js/tag.js') }}"></script>
{% endblock %}
