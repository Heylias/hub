{% extends 'admin/base.html.twig' %}

{% block title %}Fanfictions{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Fanfictions Management</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th class="text-center">Chapters</th>
                    <th class="text-center">Note</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for fiction in pagination.data %}
                    <tr>
                        <td>{{ fiction.id }}</td>
                        <td>{{ fiction.title }}</td>
                        <td>{{ fiction.author.pseudonym }}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ fiction.chapters | length }}</span>
                        </td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ fiction.avgRatings }}</span>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('admin_fiction_edit', {'id':fiction.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_fiction_delete', {'id':fiction.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}