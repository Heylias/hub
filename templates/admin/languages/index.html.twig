{% extends 'admin/base.html.twig' %}

{% block title %}Languages{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Languages Management</h1>
        <a href="{{ path('admin_language_create') }}" class="btn btn-primary">Create a new language</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Short</th>
                    <th>Name</th>
                    <th class="text-center">Fanfictions</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for language in pagination.data %}
                    <tr>
                        <th>{{ language.id }}</th>
                        <td>{{ language.short }}</td>
                        <td>{{ language.name }}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ language.fanfiction | length }}</span>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('admin_language_edit', {'id':language.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_language_delete', {'id':language.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}