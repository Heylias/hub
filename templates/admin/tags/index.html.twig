{% extends 'admin/base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Tags Management</h1>
        <a href="{{ path('admin_tag_create') }}" class="btn btn-primary">Create a new tag</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th class="text-center">Fantags related</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in pagination.data %}
                    <tr>
                        <td>{{ tag.id }}</td>
                        <td>{{ tag.name }}</td>
                        <td>{{ tag.description | raw }}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ tag.fictions | length }}</span>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('admin_tags_edit', {'id':tag.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_tags_delete', {'id':tag.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}