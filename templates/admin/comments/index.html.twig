{% extends 'admin/base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Comments management</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Author</th>
                    <th class="text-center">Comment</th>
                    <th class="text-center">Note</th>
                    <th class="text-center">Fanfiction</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in pagination.data %}
                    <tr>
                        <td>{{comment.id}}</td>
                        <td>{{comment.creationDate | date('d/m/Y H:i')}}</td>
                        <td>{{comment.author.pseudonym}}</td>
                        <td>{{comment.commentary | nl2br}}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{comment.rating}}</span>
                        </td>
                        <td class="text-center">{{comment.fanfiction.title}}</td>
                        <td class="text-center">
                            <a href="{{ path('admin_comment_edit', {'id':comment.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_comment_delete', {'id':comment.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}