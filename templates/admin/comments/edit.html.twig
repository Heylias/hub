{% extends 'admin/base.html.twig' %}

{% block title %}Editing comment from {{comment.author.pseudonym}}{% endblock %}

{% form_theme myForm _self %}

{% block body %}
    <div class="container">
        <h1>Modification du commentaire de {{comment.author.pseudonym}}</h1>
        <a href="{{path('admin_comments_index')}}" class="btn btn-secondary my-3">Back</a>
        {{form_start(myForm)}}
        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Update the comment?</h4>
                    </div>
                    <div class="card-body">
                        {{form_widget(myForm)}}
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check"></i>
                            Save the comment
                        </button>
                        <a href="{{ path('admin_comments_index') }}" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </div>
        </div>
        {{form_end(myForm)}}
    </div>
{% endblock %}