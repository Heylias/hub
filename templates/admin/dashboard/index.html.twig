{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card bg-primary text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.users}} users</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-info text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-book-open fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.fictions}} fanfictions</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-success text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-comment fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.comments}} comments</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-success text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-tags fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.tags}} tags</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-secondary text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-language fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.languages}} languages</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-light text-black mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-tags fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.genres}} genres</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-danger text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-book fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{stats.chapters}} chapters</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <div class="alert alert-success">
                <h2 class="alert-heading my-3"><i class="fas fa-arrow-up"></i> Most popular fanfictions</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th class="text-center">Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for fiction in bestFictions %}
                        <tr>
                            <td>{{fiction.title}}</td>
                            <td>
                                {% if fiction.coverImage %}
                                <img src="{{ fiction.coverImage }}" class="avatar avatar-mini"
                                    alt="{{ fiction.title | slice(0,10) }}">
                                {% else %}
                                <img src="http://placehold.it/64x64" class="avatar avatar-mini"
                                    alt="{{ fiction.title | slice(0,10) }}">
                                {% endif %}
                                {{ fiction.title | slice(0,10) }}
                            </td>
                            <td>{{ fiction.note }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <div class="alert alert-danger">
                <h2 class="alert-heading my-3"><i class="fas fa-arrow-down"></i> Least popular fanfictions</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th class="text-center">Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for fiction in worstFictions %}
                        <tr>
                            <td>{{ fiction.title }}</td>
                            <td>
                                {% if fiction.coverImage %}
                                <img src="{{ fiction.coverImage }}" class="avatar avatar-mini"
                                    alt="{{ fiction.title | slice(0,10) }}">
                                {% else %}
                                <img src="http://placehold.it/64x64" class="avatar avatar-mini"
                                    alt="{{ fiction.title | slice(0,10) }}">
                                {% endif %}
                                {{ fiction.title | slice(0,10) }}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}